@model CareerCloud.Pocos.ApplicantProfilePoco

@{
    ViewData["Title"] = "Details";
}

@*<h1>Details</h1>*@
<div class="row justify-content-center m-3">
    <h4>Applicant Profile</h4>
    <hr />

    <div class="card-deck">

        <div class="card m-3" >
            <div class="card-header">

                <h3> @Html.DisplayFor(model => model.SecurityLogin.FullName)</h3>
            </div >
            <div class=" col-sm-6 col-md col-lg-4">
                <img class="card-img-top" src="~/images/pic.jpg" />
            </div>
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SecurityLogin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SecurityLogin.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CurrentSalary)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CurrentSalary)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CurrentRate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CurrentRate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Currency)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Currency)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Province)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Province)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Street)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Street)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PostalCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PostalCode)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemCountryCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SystemCountryCode.Code)
                </dd>
            </dl>
        </div>
    </div>
</div>


<div>
    <a  asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>
<div>
    <Partial name="~/Views/Shared/_ApplicantSkillsPartial.cshtml" model="@Model.ApplicantSkills.ToList()"/>
</div>
<div>
    <Partial name="~/Views/Shared/_ApplicantResumePartial.cshtml" model="@Model.ApplicantResumes.ToList()" />
</div>
<div>
    <Partial name="~/Views/Shared/_ApplicantEducationPartial.cshtml" model="@Model.ApplicantEducations.ToList()"  />
</div>
<div>
    <Partial name="~/Views/Shared/_ApplicantWorkHistoryPartial.cshtml" model="@Model.ApplicantWorkHistories.ToList()" />
</div>
<div>
    <Partial name="~/Views/Shared/_ApplicantJobApplicationPartial.cshtml" model="@Model.ApplicantJobApplications.ToList()" />
</div>