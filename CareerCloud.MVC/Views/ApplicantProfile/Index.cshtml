    ViewData["Title"] = "Index";
}

<h1>Applicant Profiles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentSalary)/
                @Html.DisplayNameFor(model => model.CurrentRate)/
                @Html.DisplayNameFor(model => model.Currency)
            </th>

            <th>
                Address
                @*@Html.DisplayNameFor(model => model.Street)
                @Html.DisplayNameFor(model => model.City)
                @Html.DisplayNameFor(model => model.PostalCode)
                @Html.DisplayNameFor(model => model.Province)
                @Html.DisplayNameFor(model => model.SystemCountryCode)*@
            </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SecurityLogin.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSalary)/
                @Html.DisplayFor(modelItem => item.CurrentRate)/
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Street) <br />
                @Html.DisplayFor(modelItem => item.City)
                @Html.DisplayFor(modelItem => item.PostalCode) <br />
                @Html.DisplayFor(modelItem => item.Province)
                @Html.DisplayFor(modelItem => item.SystemCountryCode.Code)
            </td>
            

           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> <br />

                <a asp-controller="ApplicantSkill" asp-action="Index" asp-route-id="@item.Id">Skills</a> |
                <a asp-controller="ApplicantEducation" asp-action="Index" asp-route-id="@item.Id">Educations</a> |
                <a asp-controller="ApplicantResume" asp-action="Index" asp-route-id="@item.Id">Resumes</a><br />
                <a asp-controller="ApplicantWorkHistory" asp-action="Index" asp-route-id="@item.Id">Work History</a> |
                <a asp-controller="ApplicantJobApplication" asp-action="Index" asp-route-id="@item.Id">Job Application</a>
            </td>
        </tr>
}
    </tbody>
</table>"
